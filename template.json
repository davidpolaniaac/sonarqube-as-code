{
  "variables": {
    "build_number": "{{env $BUILD_BUILDNUMBER}}"
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{env $DIGITALOCEAN_API_TOKEN}}",
      "image": "coreos-stable",
      "region": "nyc3",
      "size": "512mb",
      "snapshot_name": "devops-{{user `build_number`}}",
      "ssh_username": "core"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "git clone https://github.com/davidpolaniaac/devops-demo.git",
        "cd devops-demo",
        "docker build -t devops .",
        "docker run -d -p 3000:3000 devops"
      ]
    }
  ]
}
