{
  "variables": {
    "build_number": "{{env `BUILD_BUILDNUMBER`}}"
  },
  "builders": [
    {
      "type": "digitalocean",
      "image": "coreos-stable",
      "region": "nyc3",
      "size": "2GB",
      "snapshot_name": "devops-artifactory-{{user `build_number`}}",
      "ssh_username": "core"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "docker pull docker.bintray.io/jfrog/artifactory-oss:latest"
      ]
    }
  ]
}
